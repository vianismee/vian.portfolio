---
import MainLayout from "../../layout/MainLayout.astro";
const posts = await Astro.glob("../blog/post/*.md");
const tags = [...new Set(posts.map((post) => post.frontmatter.tags).flat())];
---

<MainLayout PageTitle="Blog">
  <section class="h-screen bg-zinc-800">
    <div class="text-white flex justify-center">
      <h1 class="text-2xl font-bold">My Blog</h1>
    </div>
    <div class="mx-auto max-w-7xl px-8 mt-10">
      <div class="grid gap-8 lg:grid lg:grid-cols-3 lg:gap-10">
        {
          posts.map((post) => (
            <a href={post.url}>
              <div class="group bg-zinc-700/30 rounded-3xl overflow-hidden hover:outline outline-2 outline-[#b3c7ff]/80 hover:shadow-xl hover:shadow-[#b3c7ff]/10">
                <div class="overflow-hidden rounded-2xl">
                  <img
                    src={post.frontmatter.img}
                    alt=""
                    class="group-hover:scale-125 transition-all ease-in"
                  />
                </div>
                <article class="px-5 pt-3 pb-5 font-roboto mt-2">
                  <h1 class="text-2xl font-semibold">
                    {post.frontmatter.title}
                  </h1>
                  <h2 class="text-zinc-400 mb-0 mt-4">
                    {post.frontmatter.pubDate}
                  </h2>
                </article>
              </div>
            </a>
          ))
        }
      </div>
    </div>
  </section>
</MainLayout>
